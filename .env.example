# ============================================
# QuickQuiz - Configuration Docker Compose
# ============================================

# Database Configuration
DB_NAME=quiz_app
DB_PORT=27017

# Backend Configuration
PORT=3000
NODE_ENV=production

# JWT Secret (Générez-en un nouveau avec: node generate-secret.js)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=24h

# Configuration Frontend
# Port 80 permet l'accès via http://localhost sans spécifier de port
FRONTEND_PORT=80

# API URL pour le frontend
  VITE_API_URL=http://localhost:3000/api
